---
import MainLayout from "../layouts/MainLayout.astro";
import { Image, Picture } from "@astrojs/image/components";
import lisePortrait from "../assets/img/portrait.webp";
import "../stylesheets/global.css";
---

<script src="../scripts/menu2.js"></script>

<MainLayout withBackground>
  <h1 id="h1">KONTAKT</h1>
  <div id="wrapper">
    <section class="kontakt_section">
      <h3>ÅBNINGSTIDER</h3>
      <p>FREDAG 13-18</p>
      <br />
      <h3>ADRESSE</h3>
      <p>Jægersborg Allé 1G <br /> 2920 Charlottelund</p>
      <br />
      <h3>KONTAKT</h3>
      <p>+45 40 41 42 02</p>
      <p>jouxli.dk@gmail.com</p>
    </section>
    <section class="portrait">
      <Image src={lisePortrait} width={null} height={null} alt="portrait" format={"webp"} class="lisePortrait" />
    </section>
  </div>
</MainLayout>

<style>
    h1 {
      font-size: var(--h1_mobile);
    }
    h3 {
      font-size: var(--h3_mobile);
    }
    p {
      font-size: var(--p_mobile);
    }
  
  #wrapper {
    margin-left: 20px;
    margin-right: 20px;
  }

  .lisePortrait {
    width: 100%;
    height: auto;
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    width: 270;
    height: 344;
    z-index: -1;
    position: relative;
  }

  .portrait {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }

  .kontakt_section {
    text-align: center;
  }

  @media (min-width: 1000px) {
    #wrapper {
      max-width: 1000px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      align-items: center;
      gap: 5em;
    }

    .kontakt_section {
      order: 1;
      padding-left: 100px;
    }

    .lisePortrait {
      width: 120%;
      order: 0;
    }
    h1 {
      font-size: var(--h1_desktop);
    }
    h3 {
      font-size: var(--h3_desktop);
    }
    p {
      font-size: var(--p_desktop);
    }
    .portrait {
      max-width: 386px;
    }

    .kontakt_section {
    text-align: left;
    }

    #wrapper {
    margin-left: 0px;
    margin-right: 0px;
    margin: 0 auto;
  }
  }
  
</style>
